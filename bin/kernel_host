#!/bin/bash

# Use this command to build the kernel for the host machine.

source /etc/portage/make.conf

/usr/bin/dracut --force --no-compress /boot/dracut.initramfs.cpio

/usr/cryptoo/bin/kmake_host ${MAKEOPTS} &&
/usr/cryptoo/bin/kmake_host install &&
/usr/sbin/grub-mkconfig > /boot/grub/grub.cfg
